#!/usr/bin/env python3

import sys
import os
import re
import pickle

import pyfortunes.db


def main():
    output = sys.argv[1]
    db = pyfortunes.db.FortuneDB()
    db.parse_fortunes()
    with open(output, "wb") as fp:
        print("Dumping ...", end="")
        pickle.dump(db.fortunes, fp)
        print(" OK")

if __name__ == "__main__":
    main()
